[
    {
        "type": "folder",
        "path": "",
        "key": "email"
    },
    {
        "type": "email",
        "path": "email",
        "key": "register-confirm",
        "controller": "MembersBundle\\Controller\\EmailController::emailAction",
        "template": "@Members\\email\\email.html.twig",
        "data": {
            "de": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Account aktivieren"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hallo {{ username }}</p><p>Bitte bestätigen Sie Ihre Registrierung <a href=\"{{ confirmationUrl }}\">hier</a>.</p><p>Mit besten Grüßen, das Team.</p>"
                }
            ],
            "en": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Activate your account"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hi {{ username }}</p><p>Please confirm your account <a href=\"{{ confirmationUrl }}\">here</a>.</p><p>Regards, the Team.</p>"
                }
            ]
        }
    },
    {
        "type": "email",
        "path": "email",
        "key": "register-confirmed",
        "controller": "MembersBundle\\Controller\\EmailController::emailAction",
        "template": "@Members\\email\\email.html.twig",
        "data": {
            "de": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Account aktiviert"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hallo {{ user.username }}!</p><p>Ihr Account wurde erfolgreich aktiviert. Bitte klicken Sie <a href=\"{{ loginpage }}\">hier</a> um zur Anmeldeseite zu gelangen.</p><p>Mit besten Grüßen, das Team.</p>"
                }
            ],
            "en": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Activate activated"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hi {{ user.username }}!</p><p>Your account has been successfully activated. Please click <a href=\"{{ loginpage }}\">here</a> to open the login page.</p><p>Regards, the Team.</p>"
                }
            ]
        }
    },
    {
        "type": "email",
        "path": "email",
        "key": "password-reset",
        "controller": "MembersBundle\\Controller\\EmailController::emailAction",
        "template": "@Members\\email\\email.html.twig",
        "data": {
            "de": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Passwort zurücksetzen"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hallo {{ user.username }}!</p><p>Besuchen Sie bitte folgende Seite, um Ihr Passwort zurückzusetzen: {{ confirmationUrl }}</p><p>Mit besten Grüßen, das Team.</p>"
                }
            ],
            "en": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Password reset request"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hallo {{ user.username }}!</p><p>To reset your password, click <a href=\"{{ confirmationUrl }}\">here</a>.</p><p>Regards, the Team.</p>"
                }
            ]
        }
    },
    {
        "type": "email",
        "path": "email",
        "key": "admin-register-notification",
        "controller": "@MembersBundle\\Controller\\EmailController::emailAction",
        "template": "@Members\\email\\email.html.twig",
        "data": {
            "de": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Ein Account wurde aktiviert"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hallo Admin,</p><p>eine neue Registrierung wurde gespeichert.</p><p>Benutzer: <a href=\"{{ deeplink }}\">{{ user.username }}</a></p><p>Mit besten Grüßen, das Team.</p>"
                }
            ],
            "en": [
                {
                    "key": "subject",
                    "type": "objectProperty",
                    "value": "Activate your account"
                },
                {
                    "key": "email_content",
                    "type": "wysiwyg",
                    "value": "<p>Hi Admin,</p><p>a new registration has been stored.</p><p>User: <a href=\"{{ deeplink }}\">{{ user.username }}</a></p><p>Regards, the Team.</p>"
                }
            ]
        }
    }
]
